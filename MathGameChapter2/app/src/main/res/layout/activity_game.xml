<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.arpitkulshrestha.mathgamechapter2.GameActivity"
    android:background="@color/material_blue_grey_900"
    android:id="@+id/layout">

    <TextView
        android:layout_width="70sp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="2"
        android:id="@+id/textPartA"
        android:layout_marginTop="51dp"
        android:textColor="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/btnChoice2"
        android:layout_toStartOf="@+id/btnChoice2"
        android:layout_marginRight="32dp"
        android:layout_marginEnd="32dp" />

    <TextView
        android:layout_width="70sp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="+"
        android:id="@+id/textOperator"
        android:textColor="#ffffffff"
        android:layout_alignTop="@+id/textPartA"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <TextView
        android:layout_width="70sp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="2"
        android:id="@+id/textPartB"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/textOperator"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="70sp"
        android:layout_height="wrap_content"
        android:text="4"
        android:id="@+id/btnChoice1"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textPartA"
        android:layout_alignStart="@+id/textPartA"
        android:layout_marginTop="133dp" />

    <Button
        android:layout_width="70sp"
        android:layout_height="wrap_content"
        android:text="3"
        android:id="@+id/btnChoice2"
        android:layout_alignTop="@+id/btnChoice1"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="70sp"
        android:layout_height="wrap_content"
        android:text="5"
        android:id="@+id/btnChoice3"
        android:layout_alignTop="@+id/btnChoice2"
        android:layout_toRightOf="@+id/textLevel"
        android:layout_toEndOf="@+id/textLevel"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="="
        android:id="@+id/textView"
        android:layout_below="@+id/textOperator"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="85dp"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Score"
        android:id="@+id/textScore"
        android:layout_marginBottom="32dp"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/btnChoice1"
        android:layout_alignStart="@+id/btnChoice1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Level"
        android:id="@+id/textLevel"
        android:layout_alignTop="@+id/textScore"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:textColor="#ffffff" />
</RelativeLayout>
