<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="My Math Test"
        android:id="@+id/myMathTest"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp"
        android:textSize="30sp"
        android:paddingBottom="5dp"
        android:textColor="@color/background_floating_material_dark" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageView"
        android:src="@mipmap/ic_launcher"
        android:layout_below="@+id/myMathTest"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play"
        android:id="@+id/playBtn"
        android:layout_below="@+id/imageView"
        android:layout_alignRight="@+id/highScrBtn"
        android:layout_alignEnd="@+id/highScrBtn"
        android:layout_alignLeft="@+id/highScrBtn"
        android:layout_alignStart="@+id/highScrBtn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="High Scores"
        android:id="@+id/highScrBtn"
        android:layout_below="@+id/playBtn"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quit"
        android:id="@+id/quitBtn"
        android:layout_below="@+id/highScrBtn"
        android:layout_alignLeft="@+id/highScrBtn"
        android:layout_alignStart="@+id/highScrBtn"
        android:layout_marginTop="33dp"
        android:layout_alignRight="@+id/highScrBtn"
        android:layout_alignEnd="@+id/highScrBtn" />
</RelativeLayout>
